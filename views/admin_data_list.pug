extends admin_layout
block content
	style.
		#user_table table td, #user_table table th{
			white-space: nowrap;
			text-align: center;
		}
		#user_table .title {
			white-space: normal !important;
		}
	#user_table.table
		table.table-responsive.table-bordered.table-hover
			thead.bg-secondary.text-white
				tr
					th 자료번호
					th 제목
					th 단위
					th Category
					th Region
					th Object
					th 업데이트/삭제
					th 상태
					th 업데이트 일자
			tbody
				each item in list
					- var date = new Date(item.updated);
					tr(about=item._id)
						td #{item.data_no}
						td.title
							a(href='/admin/data/read/' + item._id) #{item.data_title}
						td #{item.data_unit}
						td
							each category in item.category_obj
								p.m-0 #{category}
						td
							each region in item.region_array
								span #{region}
						td
							each obj in item.object
								p.m-0 #{obj}
						td
							button.btn.btn-primary.d-block.my-1.mx-auto(onclick='fnUpdateData(`' + item._id + '`)') 업데이트
							button.btn.btn-danger.d-block.my-1.mx-auto(onclick='fnDeleteData(`' + item._id + '`)') 삭제
						td #{item.status === 1 ? '제공' : item.status === 2 ? '중지' : '삭제'}
						td #{date.toLocaleDateString('ko')}
	block append_Js
		script(src='/assets/js/admin.js', type='text/javascript')
