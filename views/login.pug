extends layout
block content
	.w-100.bg-gradient-zhupao
		.d-flex.align-items-center.min-vh-100(style='height:1px;')
			.container
				form(method='POST', action='/auth/login')
					.text-center.my-3
						h2.text-white Great China Region Market Data Portal
						h5.text-secondary Market data and Studies from more than 23,400 Sources
					.mx-auto.w-50.mt-5
