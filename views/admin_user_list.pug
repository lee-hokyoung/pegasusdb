extends admin_layout
block content
	style.
		#user_table table td, #user_table table th{
			/*white-space: nowrap;*/
			text-align: center;
			font-size: 13.5px;
			padding:0.35rem;
		}
		ul#user_list li .col-1, ul#user_list li .col{padding:0 .25rem;}
		ul#user_list li a:after{content:'더보기'}
		ul#user_list li a[aria-expanded=true]:after{content:'접기'}


	ul.list-group.list-group-flush.text-center#user_list
		li.list-group-item.list-group-item-primary
			.row.small
				.col-1 고객번호
				.col-1 기업명
				.col-1 담당자
				.col-1 연락처
				.col-1 이메일
				.col 아이디(ID)
				.col 비밀번호(PW)
				.col-1 데이터 구매목록
				.col-1 중지/삭제
				.col-1 상태
		each item, idx in users
			- var n = 0
			li.list-group-item(class=idx%2===1?'list-group-item-secondary':'')
				.row.small
					.col-1 #{item.user_no}
					.col-1 #{item.user_corp}
					.col-1 #{item.manager_name}
					.col-1 #{item.manager_tel}
					.col-1 #{item.email}
					.col.text-nowrap #{item.user_id}
					.col.text-nowrap #{item.user_pw}
					.col-1 #{item.cate_info.length}
						while n < (item.cate_info.length < 4 ? item.cate_info.length:4)
							| #{item.cate_info[n++].cate_name}
							br
						if(item.cate_info.length > 4)
							.overflow-hidden.collapse(style='line-height:1.3em;', id='cate_' + item._id)
								while n < item.cate_info.length
									| #{item.cate_info[n++].cate_name}
									br
							a(href='#', data-toggle='collapse', data-target='#cate_' + item._id)

							//while n < item.cate_info.length
						//if(item.cate_info.length > 4)
						//		while idx < item.cate_info.length
						//		| #{item.cate_info[idx++].cate_name}
						//		br

					.col-1
						button.btn.btn-primary.btn-sm.p-1.mb-1 제공
						button.btn.btn-warning.btn-sm.p-1.mb-1 중지
						button.btn.btn-danger.btn-sm.p-1 삭제
					.col-1 #{item.status===1?'제공':item.status===2?'중지':'삭제'}

